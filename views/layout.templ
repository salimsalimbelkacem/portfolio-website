package views

templ head() {
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="icon" type="image/x-icon" href="/static/favicon.ico">

		<title>Salim Belkacem's portfolio</title>
		<link rel="stylesheet" href="/static/style.css">
		<script src="/static/scripts/htmx.min.js"> </script>

		<link rel="stylesheet" type='text/css' href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css" /> 
		</head>
}

templ theme_toggle_button(){
	<button class="h-10 w-10 self-center"
	onClick="document.documentElement.classList.toggle('dark')">
		<svg class="fill-black block dark:hidden" fill="currentColor" viewBox="0 0 20 20">
		    <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
		</svg>
		<svg class="fill-white hidden dark:block" fill="currentColor" viewBox="0 0 20 20">
		    <path
			d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"
			fill-rule="evenodd" clip-rule="evenodd"></path>
		</svg>
	</button>
}

templ navbar() {
	<header class="px-6 pt-4 flex justify-between items-stretch order-1">
		<h1 class="text-5xl md:text-5xl font-display-sans select-none">
		<span>SALIM BELKACEM</span>
		<img src="/static/images/wizard2.gif" class="w-20 hidden md:inline">
		</h1>

	@theme_toggle_button()

	</header>
}

templ Layout() {
	<!DOCTYPE html>
		<html lang="en" class="max-h-screen flex flex-col">
			@head()
			<body class="h-screen flex flex-col dark:bg-black dark:text-white ">
				@navbar()

				<main class="flex-1 min-h-0 px-2 md:p-5 flex order-3 md:order-2"> //border-3 border-white mx-10">
						{ children... }
				</main>

				<script src="/static/scripts/script.js"></script>
				@footer()
			</body>

		</html>
}

